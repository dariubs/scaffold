# Go module path (used in go.mod and all Go imports)
GO_MODULE_PATH=github.com/dariubs/scaffold

# Database Configuration
DB_DSN=postgres://username:password@localhost:5432/scaffold_db?sslmode=disable

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# Server
PORT=3782
ADMIN_BASE_PATH=admin

# Login method toggles (optional; set to true/1/yes to enable, omit or false to disable)
LOGIN_PASSWORD_ENABLED=true
LOGIN_GOOGLE_ENABLED=true
LOGIN_GITHUB_ENABLED=false
LOGIN_LINKEDIN_ENABLED=false
LOGIN_X_ENABLED=false

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URL=http://localhost:3782/auth/google/callback

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URL=http://localhost:3782/auth/github/callback

# LinkedIn OAuth Configuration
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URL=http://localhost:3782/auth/linkedin/callback

# X (Twitter) OAuth Configuration
X_CLIENT_ID=
X_CLIENT_SECRET=
X_REDIRECT_URL=http://localhost:3782/auth/x/callback

# Cloudflare R2 Configuration
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET=your-r2-bucket-name
CLOUDFLARE_R2_REGION=auto

# Resend Email (optional - welcome email on registration when set)
RESEND_API_KEY=
RESEND_FROM=Scaffold <onboarding@resend.dev>
